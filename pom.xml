<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.erigir.chirp</groupId>
    <artifactId>parent</artifactId>

    <packaging>pom</packaging>
    <version>LOCAL-SNAPSHOT</version>
    <name>chirp</name>
    <description>Twitter clone for learning Java</description>
    <inceptionYear>2014</inceptionYear>
    <developers>
        <developer>
            <id>cweiss</id>
            <name>Chris Weiss</name>
            <email>bitblit@gmail.com</email>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
        <mytime>${maven.build.timestamp}</mytime>

        <site.name>chirp</site.name>
        <chirp.version>1.0.0-SNAPSHOT</chirp.version>
        <jackson.version>2.4.1</jackson.version>
        <spring.version>4.0.5.RELEASE</spring.version>
        <aws.version>1.7.12</aws.version>
        <slf4j.version>1.7.6</slf4j.version>
        <junit.version>4.8.2</junit.version>
        <logback.version>1.0.11</logback.version>
        <jdk.version>1.7</jdk.version>
        <wrench.version>1.2.1+76</wrench.version>
        <seedy.version>0.9.0+45</seedy.version>
    </properties>

    <modules>
        <module>V00</module>
        <module>V01</module>
        <module>V02</module>
        <module>V03</module>
        <module>V04</module>
        <module>V05</module>
        <module>V06</module>
    </modules>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <configuration>
                        <skipDeploy>true</skipDeploy>
                    </configuration>
                    <version>3.0</version>
                    <dependencies>
                        <dependency>
                            <groupId>org.apache.maven.wagon</groupId>
                            <artifactId>wagon-ssh</artifactId>
                            <version>1.0</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
